<view>
    <view class="swiper-tab">
        <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">比赛</view>
        <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">球员</view>
        <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">球队</view>
    </view>

    <swiper current="{{currentTab}}" duration="300"  bindchange="swiperTab">
        <swiper-item>
          <view class="game-wrapper" >
            <game-list></game-list>
          </view>
        </swiper-item>
        <swiper-item><view>球员</view></swiper-item>
        <swiper-item><view>球队</view></swiper-item>
    </swiper>
</view>

