<view>
    <view class="swiper-tab">
        <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">Game</view>
        <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">Player</view>
        <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">Team</view>
    </view>

    <swiper current="{{currentTab}}" duration="300"  bindchange="swiperTab">
        <swiper-item><view>Games</view></swiper-item>
        <swiper-item><view>Players</view></swiper-item>
        <swiper-item><view>Teams</view></swiper-item>
    </swiper>
</view>

