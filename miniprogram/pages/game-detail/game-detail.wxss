/* miniprogram/pages/game-detail/game-detail.wxss */
.game-detail {
    text-align: center;
}

.game-item {
    display: flex;
    align-content: center;
    color: #fff;
    padding: 10rpx;
    height: 250rpx;
}

.game-left, .game-right {
    width: 30%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: center;
    text-align: center;
}

.img-wrapper {
    display: flex;
    justify-content: center;
}

.team-avatar {
    display: block;
    width: 100rpx
}

.game-center {
    flex: 1;
}

.team-text {
    font-size: 14px;
    display: block;
}

.game-center {
    padding-top: 20rpx;
}

.game-title {
    font-size: 10px;
    margin-bottom: 30rpx;
}

.quarter {
    margin-right: 10rpx;
}

.score-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
}

.division {
    background-color: #fff;
    width: 2rpx;
    height: 70rpx;
    margin: 0 40rpx;
}

.score {
    font-size: 30px;
}

.title {
    font-size: 10px;
}