.picker {
    display: flex;
    align-items: center;
}

.arrow-down {
    width: 0;
    height: 0;
    border-top: 6px solid #fff;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-bottom: 4px solid transparent;
    margin-left: 6px;
    margin-top: 6px;
}