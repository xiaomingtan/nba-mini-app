/* components/data-list/data-list.wxss */
.data-list {
    display: flex;
    height:100%;
}

.data-list-aside {
    width: 150rpx;
    font-size: 20rpx;
    height: 100%;
    background-color: #f1f1f1;
    color: #cccccc;
}

.aside-text {
    position: relative;
    padding: 20rpx;
}

.data-list-aside .active {
    background-color: #fff;
    color: #d64a4d;
}

.data-list-aside .active::before {
    content: ' ';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background-color: #d64a4d;
}

.data-list-main {
    flex: 1;
}

.group-title {
    padding: 0 10px;
    display: flex;
    font-size: 12px;
    font-weight: bold;
    color: #000;
    border-bottom: 1px solid #f1f1f1;
    height: 35px;
    line-height: 40px;
}

.list {
    padding: 0 10px;
    display: flex;
    font-size: 12px;
    color: #000;
    border-bottom: 1px solid #f1f1f1;
    height: 35px;
    line-height: 40px;
}