/* components/player-data/player-data.wxss */
.player-data {
    display: flex !important;
    font-size: 13px;
}

.title {
    color: #fff !important;
}

.line {
    text-indent: 4px;
    height: 35px;
    line-height: 35px;
    border-bottom: 1px solid #f1f1f1;
}

.data-left {
    width: 100px !important;
}

.data-left .line{
    width: 100px;
}

.data-right {
    flex: 1;
}

.data-right .line{
    width: 50px;
    text-align: center;
}

.row {
    display: flex;
}
